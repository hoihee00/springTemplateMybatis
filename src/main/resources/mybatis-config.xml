<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<!-- 오라클 컬럼이 first_name 를 VO firstName 처럼 카멜케이스로 변환 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>
	<typeAliases>
		<typeAlias type="com.company.app.emp.service.Emp" alias="emp"/> 
		<typeAlias type="com.company.app.emp.service.Dept" alias="dept"/> 
		<package name="com.company.app.emp.service"/> <!-- vo 파일이 한 패키지에 모여 있을 경우 쉽게 사용가능 -->
	</typeAliases>
</configuration>  
